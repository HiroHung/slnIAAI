@model prjIAAI.Models.ViewLogin
@{
    Layout = null;
}
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>國際縱火調查人員協會-台灣分會網站管理系統</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- styles -->
    <link href="~/css/styles.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-bg">
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Logo -->
                    <div class="logo">
                        <h1 style="text-align: center"><a href="#"> 國際縱火調查人員協會-台灣分會網站管理系統</a></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-wrapper">
                    <div class="box">
                        <div class="content-wrap">
                            <h6>IAAI-TW網站管理登入</h6>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @* 帳號輸入 *@
                                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", placeholder = "使用者名稱" } })
                                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })

                                @* 密碼輸入 *@
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "密碼" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                @* 登入按鈕 *@
                                <div class="action">
                                    <input type="submit" value="登入" class="btn btn-primary signup" />
                                </div>
                            }
                            @if (TempData["message"] != null)
                            {
                                <script type="text/javascript">
                                         var message = @Html.Raw(Json.Encode(TempData["message"]));
                                         alert(message);
                                </script>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/custom.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>


